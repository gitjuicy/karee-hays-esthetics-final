<ul class="social-sharing list-unstyled">
    <li>
        <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="link link--text share-facebook">
          {% render 'svg-icon-facebook' %}
          <span class="visually-hidden">Facebook</span>
        </a>
    </li>

    <li>
        <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="link link--text share-twitter">
          {% render 'svg-icon-twitter' %}
          <span class="visually-hidden">Twitter</span>
        </a>
    </li>

    <li>
        <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="link link--text share-pinterest">
          {% render 'svg-icon-pinterest' %}
          <span class="visually-hidden">Pinterest</span>
        </a>
    </li>
</ul>