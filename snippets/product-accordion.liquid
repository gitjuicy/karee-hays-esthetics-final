        <button type="button" class="button-reset d-flex align-items-center">
            {% render 'svg-icon-plus' %}
            <h3 class="uppercase ms-2 h4">{{ igrdts_title }}</h3>
        </button>

        <div class="accordion__description rte">
            {{ igrdts_desc }}
        </div>
    {% endif %}
    <!-- End Ingredients Section -->

    <!-- Start Notes Section -->
    {% liquid
        assign notes_title = product.metafields.accordion.notes_title.value
        assign notes_desc = product.metafields.accordion.notes_description.value
    %}
    {% if notes_title != blank and notes_desc != blank %}
        <button type="button" class="button-reset d-flex align-items-center">
            {% render 'svg-icon-plus' %}
            <h3 class="uppercase ms-2 h4">{{ notes_title }}</h3>
        </button>

        <div class="accordion__description rte">
            {{ notes_desc }}
        </div>
    {% endif %}
    <!-- End Notes Section -->
</div>