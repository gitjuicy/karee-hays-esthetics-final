<div class="product__accordion my-4 rte">
    <!-- Start Benefits Accordion -->
    {% liquid
        assign benefits_title = product.metafields.accordion.benefits_title.value
        assign benefits_desc = product.metafields.accordion.benefits_description.value
    %}
    {% if benefits_title != blank and benefits_desc != blank %}
        <button type="button" class="button-reset d-flex align-items-center">
            {% render 'svg-icon-plus' %}
            <h3 class="uppercase ms-2 h4">{{ benefits_title }}</h3>
        </button>

        <div class="accordion__description rte">
            {{ benefits_desc }}
        </div>
    {% endif %}
    <!-- End Benefits Accordion -->

    <!-- Start Usage Section -->
    {% liquid
        assign usage_title = product.metafields.accordion.usage_title.value
        assign usage_desc = product.metafields.accordion.usage_description.value
