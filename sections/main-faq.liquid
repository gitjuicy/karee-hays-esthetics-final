{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{{ 'section-main-faq.css' | asset_url | stylesheet_tag }}


<script src="{{ 'main-faq.js' | asset_url }}" defer="defer"></script>

<div class="container">

    <!-- Start Heading -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="mt-0 uppercase center h2">{{ page.title }}</h1>
        </div>
    </div>
    <!-- End Heading -->

    <!-- Start FAQs -->
    {% if section.blocks.size > 0 %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {% for block in section.blocks %}
                {% if block.type == 'question-answer' %}
                    <h2 class="h4 uppercase" data-faq-question>
                        {{ block.settings.question }}
                        {% render 'svg-icon-plus' %}
                    </h2>
                    <div class="rte p-3 d-none" data-faq-answer>
                        {{ block.settings.answer }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {% endif %}
    <!-- End FAQs -->

</div>

{% schema %}
{
    "name": "FAQs",
    "tag": "section",
    "class": "spaced-section faqs",
    "blocks": [
        {
            "name": "Q/A",
            "type": "question-answer",
            "settings": [
                {
                    "type": "text",
                    "id": "question",
                    "label": "Question"
                },
                {
                    "type": "richtext",
                    "id": "answer",
                    "label": "Answer"
                }
            ]
        }
    ]
}
{% endschema %}