{{ 'component-main-services.css' | asset_url | stylesheet_tag }}

<div class="container">
  <div class="services-section-b">
    <h3>{{ section.settings.title }}</h3>
    <p>{{ section.settings.description }}</p>
    <a class="button" href="{{ section.settings.buttonLink }}">{{ section.settings.buttonText }}</a>
  </div>
</div>

{% schema %}
  {
    "name": "Facials, Section B",
    "tag": "section",
    "class": "spaced-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      }, {
        "type": "text",
        "id": "buttonLink",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "buttonText",
        "label": "Button text"
      }
    ],
    "presets": [
      {
        "name": "Section B",
        "category": "Text"
      }
    ]
  }
{% endschema %}
