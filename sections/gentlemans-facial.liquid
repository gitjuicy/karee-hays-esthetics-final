{{ 'component-main-services.css' | asset_url | stylesheet_tag }}
<div class="container">
  <div class="services-section-g mt-5 mb-5 row">
    <div class="services-section-g-left col-md-6 col-sm-12">
      <h3>{{ section.settings.title }}</h3>
      <p>{{ section.settings.description }}</p>
      <a class="button" href="{{ section.settings.buttonLink }}" style="margin: 0 auto;">{{ section.settings.buttonText }}</a>
    </div>
    {% if section.settings.img != blank %}
      <div class="services-section-g-right col-md-6 col-sm-12" style="background-size: cover; background-position: top; background-image: url({{ section.settings.img | img_url: 'master' }});">
        <span class="visually-hidden"></span>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Facials, Section G",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "buttonLink",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "buttonText",
        "label": "Button Text"
      }
    ],
    "presets": [
      {
        "name": "Gentleman's facial",
        "category": "Text and Image"
      }
    ]
  }
{% endschema %}
