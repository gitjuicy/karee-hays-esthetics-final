{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'section-home-labs.css' | asset_url | stylesheet_tag }}

<div class="container">
  <!-- Start Heading Section -->
  <div class="row justify-content-center">
    <div class="col-lg-7 col-md-10 center">
      <h1 class="h3 uppercase mt-0">{{ section.settings.sub_title }}</h1>
      <h2 class="h2 uppercase mt-0">{{ section.settings.title }}</h2>
    </div>
  </div>
  <!-- End Heading Section -->

  <!-- Start Featured Products -->
  {% if section.blocks.size > 0 %}
    <div class="row mt-5">
      {% for block in section.blocks %}
        <div class="col-6 col-lg-3">
          {% render 'product-card', product_card_product: block.settings.featured_product %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
  <!-- End Featured Products -->

  <!-- Start Learn More Link -->
  <div class="row">
    <div class="col-12 center">
      <a href="{{ section.settings.link }}" class="link link--text my-5 featured-products">
        {{ section.settings.link_text }}
      </a>
    </div>
  </div>
  <!-- End Learn More Link -->
</div>


{% schema %}
  {
    "name": "Labs",
    "tag": "section",
    "class": "home-labs",
    "settings": [
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title",
        "default": "Products"
      }, {
        "type": "text",
        "id": "title",
        "label": "label",
        "default": "KH Skin Labs"
      }, {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "View All Products"
      }, {
        "type": "url",
        "id": "link",
        "label": "All Products Link"
      }
    ],
    "blocks": [
      {
        "name": "Product",
        "type": "product",
        "limit": 4,
        "settings": [
          {
            "type": "product",
            "id": "featured_product",
            "label": "Featured Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product Lab"
      }
    ]
  }
{% endschema %}